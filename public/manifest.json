{
  "manifest_version": 3,
  "name": "API Element Mapper",
  "version": "1.0",
  "description": "Map UI elements to API calls",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "debugger",
    "tabs",
    "<all_urls>",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.atlassian.net/*",
    "https://indiemapper.atlassian.net/*",
    "*://*.firebaseio.com/*",
    "*://*.firebase.com/*",
    "*://*.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.atlassian.net"
  },
  "devtools_page": "devtools/index.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
